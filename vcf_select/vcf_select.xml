<tool id="vcf_select" name="Select VCF fields" version="0.1.0" >
    <description>Select fields of interest from a merged VCF.</description>
    <requirements>
      <requirement type="package" version="1.2.3">pandas</requirement>
      <requirement type="package" version="0.13.3">vcfpy</requirement>
      <requirement type="package" version="7.1.1">natsort</requirement>
    </requirements>
  <version_command>$__tool_directory__/vcf_select.py --version</version_command>

  <command><![CDATA[
    python $__tool_directory__/vcf_select.py
    --input_vcf $input_vcf
    --caller_priority
    #for $i, caller in enumerate( $caller_priority ):
      "${caller.caller_label}"
    #end for
    --info_fields $info_fields
    --sample_fields $sample_fields
    --output_vcf $output_vcf
  ]]></command>

  <inputs>
    <param name="input_vcf" type="data" format="vcf" label="Input VCF" />
    <repeat name="caller_priority" title="Variant caller priority" help="Set the priority of variant callers used in the input VCF.">
      <param name="caller_label" type="text" label="Caller label" />
    </repeat>
    <param name="info_fields" type="text" label="Select INFO fields" />
    <param name="sample_fields" type="text" label="Select sample fields" />
  </inputs>

  <outputs>
    <data format="vcf" name="output_vcf" label="${tool.name} on ${on_string}: VCF" />
  </outputs>

  <tests></tests>

  <help>
    Select fields of interest from a merged VCF.
  </help>

  <citations></citations>

</tool>