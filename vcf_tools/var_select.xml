<tool id="var_select" name="Variant Select" version="@VERSION@.0" >
  <description>Select variants in a VCF</description>

  <macros>
    <import>vcf_tools_macros.xml</import>
  </macros>
  <expand macro="requirements" />
  <expand macro="version_command" />

  <command><![CDATA[
    python $__tool_directory__/var_select.py "${input_vcf}" "${filter}" "${output_vcf}"
    #if $exclusive
      --exclusive '${exclusive}'
    #end if
    #if $remove
      --remove '${remove}'
    #end if
    && cat filtered_out.vcf > $output2_vcf
  ]]></command>

  <inputs>
    <param name="input_vcf" type="data" format="vcf,vcf_bgzip" label="Input VCF" />
    <param name="filter" type="text" label="Filter(s) of interest" />
    <param name="exclusive" type="boolean" truevalue="--exclusive" falsevalue="" label="Select variants with ONLY filter(s) of interest" />
    <param name="remove" type="boolean" truevalue="--remove" falsevalue="" label="Remove variants with selected filter(s) of interest" />
  </inputs>

  <outputs>
    <data name="output_vcf" format="vcf" label="${tool.name} on ${on_string}: VCF" />
    <data name="output2_vcf" format="vcf" label="${tool.name} on ${on_string}: Filtered out VCF" />
  </outputs>

  <help>
    Select variants in a VCF
  </help>

  <tests> </tests>

  <citations> </citations>

</tool>
