<tool id="vcf_select" name="Select VCF fields" version="@VERSION@.0" >
  <description>Select fields of interest from a merged VCF</description>

  <macros>
    <import>vcf_tools_macros.xml</import>
  </macros>
  <expand macro="requirements" />
  <expand macro="version_command" />

  <command><![CDATA[
    python $__tool_directory__/vcf_select.py
    --input_vcf $input_vcf
    --caller_priority
    #for $i, caller in enumerate( $caller_priority ):
      "${caller.caller_label}"
    #end for
    --info_fields $info_fields
    --sample_fields $sample_fields
    --output_vcf $output_vcf
  ]]></command>

  <inputs>
    <param name="input_vcf" type="data" format="vcf" label="Input VCF" />
    <repeat name="caller_priority" title="Variant caller priority" help="Priority of caller labels">
      <param name="caller_label" type="text" label="Caller label" />
    </repeat>
    <param name="info_fields" type="text" label="Info fields of interest" />
    <param name="sample_fields" type="text" label="Format fields of interest" />
  </inputs>

  <outputs>
    <data format="vcf" name="output_vcf" label="${tool.name} on ${on_string}: VCF" />
  </outputs>

  <help>
    Select fields of interest from a merged VCF
  </help>

  <tests> </tests>

  <citations> </citations>

</tool>
