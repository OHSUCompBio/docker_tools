<tool id="var_label" name="Variant Label" version="@VERSION@.0" >
  <description>Label variants in a VCF</description>

  <macros>
    <import>vcf_tools_macros.xml</import>
  </macros>
  <expand macro="requirements" />
  <expand macro="version_command" />

  <command><![CDATA[
    python $__tool_directory__/var_label.py "${input_vcf}" "${resource}" "${label}" "${description}" "${output_vcf}"
  ]]></command>

  <inputs>
    <param name="input_vcf" type="data" format="vcf,vcf_bgzip" label="Input VCF" />
    <param name="resource" type="data" format="vcf,vcf_bgzip" label="Resource VCF" />
    <param name="label" type="text" label="ID of label" />
    <param name="description" type="text" label="Description of label" />
  </inputs>

  <outputs>
    <data name="output_vcf" format="vcf" label="${tool.name} on ${on_string}: VCF" />
  </outputs>

  <help>
    Label variants in a VCF.
  </help>

  <tests> </tests>

  <citations> </citations>

</tool>
