  <command><![CDATA[
    #import datetime
    #set $date = datetime.datetime.now().strftime("%Y-%m-%d_%H-%M-%S")
    #set $outfile = '${run_id}' + '_' + '${date}' + '_samplesheet.txt'
    printf "%s\n%s\n%s\t%s_r1.fastq.gz\n%s\t%s_r2.fastq.gz\n" "${run_id}" "${date}" "${sample_id}" "${sample_id}" "${sample_id}" "${sample_id}" > "${outfile}"

    ln -s \${NUPROBE} . &&
    ln -s ${input_fq} ${sample_id}_r1.fastq.gz &&
    ln -s ${input_fq_2} ${sample_id}_r2.fastq.gz &&
    ./NuProbe_VarMap_PanCancer_Analysis_v1_local_linux &&
    echo '${run_id}\ny\n'
  ]]></command>

