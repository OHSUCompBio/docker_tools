<tool id="vcf_combine" name="Uniquify VCFs" version="0.2.1" >
    <description>Remove entries from one VCF in a second VCF.</description>
  <version_command>$__tool_directory__/vcf_combine.py --version</version_command>

    <command><![CDATA[
        $__tool_directory__/vcf_combine.py $remove_vcf $vcf_cands $output_vcf $output_vcf_base
     ]]></command>

  <inputs>
    <param name="remove_vcf" type="data" format="vcf" label="Remove Variants VCF" help="Remove variants from this VCF." />
    <param name="vcf_cands" type="data" format="vcf" label="Candidate Variants VCF" help="Variants in this VCF will be removed from the other VCF if they exist." />
  </inputs>

  <outputs>
    <data format="vcf" name="output_vcf" label="${tool.name} on ${on_string}: VCF" />
    <data format="vcf" name="output_vcf_base" label="${tool.name} on ${on_string}: Source VCF" />
  </outputs>

  <tests></tests>

  <help>
    Remove entries from one VCF in a second VCF.
  </help>

  <citations></citations>

</tool>

