<tool id="var_select" name="Variant Select" version="0.1.0" >
    <description>Select variants in a VCF.</description>
    <requirements>
      <requirement type="package" version="1.2.3">pandas</requirement>
      <requirement type="package" version="0.13.3">vcfpy</requirement>
      <requirement type="package" version="7.1.1">natsort</requirement>
      <requirement type="package" version="1.9">samtools</requirement>
    </requirements>
  <version_command>$__tool_directory__/vcf.py --version</version_command>

  <command><![CDATA[
    python $__tool_directory__/var_select.py
    --input_vcf "${input_vcf}"
    --filter "${filter}"
    --exclusive "${exclusive}"
    --output_vcf "${output_vcf}"
  ]]></command>

  <inputs>
    <param name="input_vcf" type="data" format="vcf,vcf_bgzip" label="Input VCF" />
    <param name="filter" type="text" label="select FILTER(s) of interest" />
    <param name="exclusive" type="boolean" label="select records with only FILTER(s) of interest." />
  </inputs>

  <outputs>
    <data name="output_vcf" format="vcf" label="${tool.name} on ${on_string}: VCF" />
  </outputs>

  <tests>

  </tests>

  <help>
    Select variants in a VCF.
  </help>

  <citations>

  </citations>

</tool>