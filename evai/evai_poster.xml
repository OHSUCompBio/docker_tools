<tool id="evai_poster" name="eVai Sample Poster" version="0.0.3">
	<description>Uploads VCFs to eVai to analyze</description>
	<requirements>
	</requirements>
	<command><![CDATA[
		java -jar eVaiAnalysisExecutor_2.0.0.jar analyze --vcf -f ${dragen_variants} \
   			-n ${sample_id} -u ${username} -p ${password} > ${output_log}
	]]>
	</command>
	<inputs>
		<param name="sample_id" type="text" label="Sample ID"/>
		<param name="username" type="text" label="eNgenome username"/>
		<param name="password" type="text" label="eNgenome password"/>
		<param name="dragen_variants" type="data" format="vcf" label="DRAGEN VCF"/>
	</inputs>

	<outputs>
		<data name="output_log" format="txt" label="log: txt"/>
	</outputs>

	<help></help>
</tool>

