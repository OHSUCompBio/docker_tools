<tool id="seattleseq_filter" name="SeattleSeq Filter" version="1.0.0">
    <description>Filter SeattleSeq variants</description>
    <command interpreter="Rscript">
        seattleseq_filter.R $input_file $output_file $cutoff_percent
    </command>

    <inputs>
        <param format="xls" name="input_file" type="data" label="Excel workbook, generated by writeGenotype"/>  
        <param name="cutoff_percent" type="float" label="Frequency percentage cutoff" value="5.0"/>  
    </inputs>

    <outputs>
        <data format="xls" name="output_file" label="Filtered variants: Excel worksheet"/>  
    </outputs>

</tool>
